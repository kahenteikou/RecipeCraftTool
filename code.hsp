#include "llmod3.hsp"
#include "input.hsp"
#uselib "user32.dll"
#func MessageBox "MessageBoxA" int, sptr, sptr, int
#cfunc FindWindow "FindWindowA" str, int
#func GetWindowRect "GetWindowRect" int,int
screen 0,200,200

z=100
dim aaa,4
exist "Classdata.txt"
if strsize=-1:dialog("ファイルがありません!\rClassdata.txtを作成してください!"):end
notesel buf
noteload "Classdata.txt"
repeat -1,0
sdim data, 256
sdim kugiri, 256
noteget data, cnt
if cnt=0 : kugiri=data : goto *loopending
hndle=FindWindow(data,)
if hndle=0{
	//if	str_comp("EOF",data) : dialog("Minecraftが起動されていません。"):end
	if data=kugiri : dialog("Minecraftが起動されていません。"):end
	/*dialog("Minecraftが起動されていません。"):end*/
}else{
	break;
}
*loopending
loop

x=1:y=1

mes "レシピブックの横"
mes "レシピブックの縦"
mes "実行速度(wait値)"

pos 130,0
input x
input y
input z

pos 0,150
mes "制作：fumitoramann"

*lll
stick a,32,0
if a&32:gosub *jikkou
await 10
goto *lll

*jikkou
GetWindowRect hndle,varptr(aaa)

/*
cls:i=0
repeat 4
mes aaa(i)
i++
loop
mes ""+(aaa(0)+aaa(2))/2+","+(aaa(1)+aaa(3))/2+""
*/
	

mx=(aaa(0)+aaa(2))/2-270+50*(x-1)
my=(aaa(1)+aaa(3))/2-80+50*(y-1)

mouse mx,my
await z
mouse_event $2:await 1:mouse_event $4



mx=(aaa(0)+aaa(2))/2+240
my=(aaa(1)+aaa(3))/2-80

mouse mx,my
await z
mouse_event $2:await 1:mouse_event $4
return